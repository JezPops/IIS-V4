@page
@model ForgotPasswordModel
@{
    Layout = null;
    ViewData["Title"] = "Forgot your password?";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Log in</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" />
    <link rel="stylesheet" href="~/css/mdbootstrap/mdb.min.css" />
</head>
<body>
    <header>
    </header>
    <!--Footer-->
    <section class="intro">
        <div class="mask d-flex align-items-center h-100">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-4">
                        <div class="card border border-info shadow-0 mb-3">
                            <div class="card-header">
                                Forgot Password
                            </div>
                            <img src="~/img/User.jpg" class="card-img-top" alt="..." />
                            <div class="card-body p-5">
                                <div class="row d-flex align-items-center">
                                    <div class="text-center mb-3">
                                        <form id="account" method="post">
                                            <!-- Email input -->
                                            <div class="form-group">
                                                <label asp-for="Input.Email"></label>
                                                <input asp-for="Input.Email" class="form-control" />
                                            </div>

                                            <div class="card-footer">
                                                <!-- Register buttons -->
                                                <div class="row d-flex align-items-center">
                                                    <button class="btn btn-primary btn-block mb-4" type="submit">Submit</button>
                                                </div>
                                                <div class="text-center">
                                                    <div asp-validation-summary="All" class="text-danger small"></div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Modal -->
    <script type="text/javascript" src="https://cdn.jsdelivr.net/jquery/latest/jquery.min.js"></script>
    <script src="~/js/mdb.min.js"></script>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>


